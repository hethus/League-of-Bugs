generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Champion {
  id          String   @id @default(uuid())
  name        String   @unique
  price       Int
  title       String
  description String
  imageUrl    String
  difficulty  String
  youTubeUrl  String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  role Role @relation(fields: [roleId], references: [id])
  roleId String @map("role_id")

  @@map("champion")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique

  champion Champion[]

  @@map("role")
}
